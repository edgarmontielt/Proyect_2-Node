<main class="flex gap-5 m-16">
    {{!-- <h1>Perfil de {{user.username}}</h1> --}}
    <section class="w-1/3 h-96 bg-gray-100 rounded-md flex justify-center">
        <div class="flex p-5 flex-col w-auto items-center">
            <img src="{{user.profile_pic}}" class="w-36 h-36 rounded-full object-cover" />
            <div class="text-center mt-4">
                {{!-- <p>{{user.idUser}}</p> --}}
                <p class="text-xl font-semibold">{{user.name}}</p>
                <p class="text-xs text-gray-500">{{user.occupation}}</p>
            </div>
            <div class=" w-full mt-6 ">
                <h2 class=" text-lg font-medium mb-3">Información</h2>
                <p class="text-gray-500"><span class="font-semibold">Fecha de nacimiento: </span>{{formatDate user.birthday}}</p>
                <p class="text-gray-500"><span class="font-semibold">Género: </span>{{user.gender}}</p>
                <p class="text-gray-500"><span class="font-semibold">Username: </span>@{{user.username}}</p>
            </div>
        </div>
    </section>

    <section class="w-2/3 bg-gray-100 rounded-md flex flex-col justify-center items-center py-5">
        <h2 class=" text-2xl font-semibold mb-5">Posts realizados</h2>
        {{#if hasPosts}}
        <div class="w-full flex flex-col">
            {{#each posts}}
            {{> post session=../session}}
            {{/each}}
        </div>
        {{/if}}
    </section>
</main>