<div class=" bg-white border px-4 py-3 rounded-lg w-1/2 h-auto shadow-md mx-auto mb-4">
    <div class="flex flex-col items-start">
        <div class="flex gap-2">
            <a href="/users/{{iduser}}" class="btn btn-primary btn-block">
                <img class="h-9 w-9 rounded-full bg-cover hover:border-2 object-cover" src='{{this.profile_pic}}'/>
            </a>
            <div class=" flex flex-col justify-center">
                <span class="font-semibold text-sm">{{this.name}}</span>
                <div class="flex flex-row gap-4">
                    <span class="text-gray-500 hover:text-east-side-700 text-xs"><a href="/users/{{iduser}}" class="btn btn-primary btn-block">@{{username}}</a></span> 
                    <span class="text-gray-600 text-xs">{{formatDate this.date}}</span>
                </div>
            </div>
        </div>

        <p class="text-gray-600 mt-2">{{this.comment_text}}</p>
    </div>
</div>