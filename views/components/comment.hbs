<div class=" bg-white border px-4 py-3 rounded-lg w-1/3 h-auto shadow-md mx-auto">
    <div class="flex flex-col items-start">
        <div class="flex gap-2">
            <a href="/users/{{iduser}}" class="btn btn-primary btn-block">
                <img class="h-10 w-10 rounded-full bg-cover hover:border-2 object-cover" src='{{this.profile_pic}}'/>
            </a>
            <span class="font-semibold">{{this.name}}</span>
            <span class="text-gray-500 hover:text-east-side-700"><a href="/users/{{iduser}}" class="btn btn-primary btn-block">@{{username}}</a></span> 
            <p class="text-gray-600">{{formatDate this.date}}</p>
        </div>

        <p class="text-gray-600">{{this.comment_text}}</p>
    </div>
</div>