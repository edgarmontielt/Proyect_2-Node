<main class="flex justify-center mt-32">
  <form
    action="/login"
    method="post"
    class="flex flex-col w-96 bg-white rounded-md p-5"
  >
    <h2 class="p-3 text-xl font-medium">Login</h2>
    <div class="flex justify-center py-5">
      <p>Â¿No tienes cuenta?,
        <a
          href="/signup"
          class="text-east-side-700 font-semibold hover:opacity-80"
        >Registrate</a></p>
    </div>
    <div class="p-3 text-red-500 font-semibold flex justify-center">
      {{#each validation.errors}}
        <p>{{this}}</p>
      {{/each}}
    </div>
    <input
      type="text"
      name="email"
      placeholder="Email"
      class="m-3 border-2 py-1 rounded-md outline-none px-2"
    />
    <input
      type="password"
      name="password"
      placeholder="Password"
      class="m-3 border-2 py-1 rounded-md outline-none px-2"
    />
    <div class="flex justify-end">
      <button
        class="m-3 bg-green-haze text-white py-2 px-5 rounded-md hover:opacity-70"
      >Ingresar</button>
    </div>
  </form>
</main>