<main class=" max-w-2xl mx-auto mt-10 flex flex-col gap-4">
    <h2 class=" font-bold text-3xl mb-10"> Usuarios de la comunidad </h2>
    {{#if hasFriendReq}}
    <section class=" bg-gray-100 p-10 rounded-md">
        <h3 class=" text-2xl font-medium mb-6">Solicitudes de amistad </h3>
        {{#each friendsReq}}
        <div class=" flex flex-row gap-5 mb-10 bg-white p-5 rounded-md shadow-lg">
            <img src="{{this.profile_pic}}" alt="{{this.username}}" class="w-16 h-16 rounded-full object-cover">
            <div>
                <h3 class=" text-lg font-medium ">{{this.name}}</h3>
                <p class=" text-sm text-gray-400">@{{this.username}}</p>
            </div>

            {{#if ../session.loggedIn }}
            <div class="ml-auto flex items-center">
                <form action="/acceptFriend/{{this.idUser}}" method="post">
                    <input type="text" class="hidden" name="idReceived" value="{{../session.user.idUser}}">
                    <button class=" bg-east-side-700 hover:opacity-90 p-2 rounded-md font-medium text-white mr-5">
                        Aceptar solicitud
                    </button>
                </form>
                <a href="/deleteFriendReq/{{this.idfriendReq}}">
                    <div class=" bg-red-500 p-2 rounded-md font-medium text-white hover:opacity-90">
                        Eliminar
                    </div>
                </a>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    {{#if hasReqSend}}
    <section class=" bg-gray-100 p-10 rounded-md">
        <h3 class=" text-2xl font-medium mb-6">Solicitudes enviadas</h3>
        {{#each requestSend}}
        <div class=" flex flex-row gap-5 mb-10 bg-white p-5 rounded-md shadow-lg">
            <img src="{{this.profile_pic}}" alt="{{this.username}}" class="w-16 h-16 rounded-full object-cover">
            <div>
                <h3 class=" text-lg font-medium ">{{this.name}}</h3>
                <p class=" text-sm text-gray-400">@{{this.username}}</p>
            </div>

            {{#if ../session.loggedIn }}
            <div class="ml-auto flex items-center">
                <a href="/addFriend/{{this.idUser}}">
                    <div class=" bg-east-side-400 p-2 rounded-md font-medium text-white">
                        Solicitud enviada
                    </div>
                </a>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    <section class=" bg-gray-100 p-10 rounded-md">
        <h3 class=" text-2xl font-medium mb-6">Más personas</h3>
        {{#if hasUsers}}
        {{#each users}}
        <div class=" flex flex-row gap-5 mb-10 bg-white p-5 rounded-md shadow-lg">
            <img src="{{this.profile_pic}}" alt="{{this.username}}" class="w-16 h-16 rounded-full object-cover">
            <div>
                <h3 class=" text-lg font-medium ">{{this.name}}</h3>
                <p class=" text-sm text-gray-400">@{{this.username}}</p>
            </div>

            {{#if ../session.loggedIn }}
            <div class="ml-auto flex items-center">
                <a href="/addFriend/{{this.idUser}}">
                    <div class=" bg-east-side-700 hover:opacity-90 p-2 rounded-md font-medium text-white">
                        Añadir amigo
                    </div>
                </a>
            </div>
            {{/if}}
        </div>
        {{/each}}
        {{/if}}
    </section>
</main>