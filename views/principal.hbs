{{#if session.user.loggedIn}}
{{#if hasUsers}}
<section class="w-screen flex justify-center absolute">
  <div class="w-1/4 bg-white rounded-b-md py-5 px-10 flex flex-row gap-4 items-center shadow-2xl shadow-gray-600">
    <img src="{{user.profile_pic}}" alt="" class="w-8 h-8 rounded-full mt-[1px]" />
    <p class="font-medium">{{user.name}}</p>
    <div class=" bg-black-700 w-6">
      <a href="/addFriend">AÃ±adir amigo</a>
    </div>
  </div>
</section>
{{/if}}

<main class="flex gap-5 m-16">
  <section class="w-1/3 h-96 bg-gray-100 rounded-md flex justify-center">
    <div class="flex p-5 flex-col w-auto items-center">
      <img src="{{session.user.profilePic}}" alt="" class="w-36 h-36 rounded-full object-cover" />
      <div class="text-center mt-4">
        <p class="text-xl font-semibold">{{session.user.name}}</p>
        <p class="text-xs text-gray-500">{{session.user.occupation}}</p>
        {{!-- <p> <strong>Fecha de nacimiento: </strong>{{formatDate session.user.birthday}}</p> --}}
      </div>
    </div>
  </section>

  <section class="w-2/3 bg-gray-100 rounded-md flex flex-col justify-center items-center">
    <div class=" button-new-post text-center my-5  py-2 bg-east-side-600 text-white font-semibold rounded-lg active:scale-95 cursor-pointer w-2/3 hover:opacity-90">
      New post
    </div>
    <div  class="w-full flex flex-col">

      {{#each posts}}
        {{> post session=../session}} 
      {{/each}}
    </div>
  </section>
</main>
{{/if}}

<script src="/js/modalNewPost.js"> </script>