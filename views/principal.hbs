{{#if session.loggedIn}}
{{#if hasUsers}}
<section class="w-screen h-24 flex justify-center absolute">
  <div class="w-2/6 bg-white rounded-b-md py-2 px-10 flex flex-row gap-4 items-center shadow-lg">
    <img src="{{user.profile_pic}}" alt="" class="w-10 h-10 rounded-full mt-[1px]" />
    <p class="font-medium">{{user.name}}</p>

    <div class="ml-auto flex items-center">
      <a href="/addFriend">
        <div class=" bg-east-side-700 p-2 rounded-md font-medium text-white">
          Añadir amigo
        </div>
      </a>
    </div>
  </div>
</section>
{{/if}}
<main class="flex gap-5 m-16">
  <section class="w-1/3 h-96 bg-gray-100 rounded-md flex justify-center">
    <div class="flex p-5 flex-col w-auto items-center">
      <img src="{{session.user.profilePic}}" alt="" class="w-36 h-36 rounded-full object-cover" />
      <div class="text-center mt-4">
        <p class="text-xl font-semibold">{{session.user.name}}</p>
        <p class="text-xs text-gray-500">{{session.user.occupation}}</p>
        {{!-- <p> <strong>Fecha de nacimiento: </strong>{{formatDate session.user.birthday}}</p> --}}
      </div>
      <div class=" grid grid-cols-3 gap-8 mt-10">
        <div
          class=" flex flex-col justify-center items-center bg-white shadow-md p-2 rounded-md hover:bg-gray-200 font-medium text-gray-500 cursor-pointer ">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"
            style="fill: rgb(128, 128, 128);transform: ;msFilter:;">
            <path
              d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z">
            </path>
          </svg>
          <span><a href="/users/{{session.user.idUser}}" class="btn btn-primary btn-block">Ver Perfil</a></span>
        </div>
        <div
          class=" flex flex-col justify-center items-center bg-white shadow-md p-2 rounded-md hover:bg-gray-200 font-medium text-gray-500 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            style="fill: rgb(128, 128, 128);transform: ;msFilter:;">
            <path
              d="M20 2H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm-6 2.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5zM19 15H9v-.25C9 12.901 11.254 11 14 11s5 1.901 5 3.75V15z">
            </path>
            <path d="M4 8H2v12c0 1.103.897 2 2 2h12v-2H4V8z"></path>
          </svg>
          <span>Ver amigos</span>
        </div>
        <div
          class=" flex flex-col justify-center items-center bg-white shadow-md p-2 rounded-md hover:bg-gray-200 font-medium text-gray-500 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            style="fill: rgb(128, 128, 128);transform: ;msFilter:;">
            <path
              d="M20 2H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm-6 2.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5zM19 15H9v-.25C9 12.901 11.254 11 14 11s5 1.901 5 3.75V15z">
            </path>
            <path d="M4 8H2v12c0 1.103.897 2 2 2h12v-2H4V8z"></path>
          </svg>
          <span>Ver amigos</span>
        </div>
      </div>
    </div>
  </section>

  <section class="w-2/3 bg-gray-100 rounded-md flex flex-col justify-center items-center py-5">
    <div class=" w-full flex  flex-col items-center px-10">
      <h2 class=" text-2xl font-semibold text-east-side-900 w-2/3 mb-2">Crear publicación</h2>
      <form action="/newpost/{{session.user.idUser}}" method="post" class="flex flex-col w-2/3">
        {{!-- <input type="text" name="title"> --}}
        {{!-- <input type="text" name="content" placeholder="Escribe lo que piensas..." class=" rounded-md h-32 bg-slate-200 outline-none p-3"> --}}
        <textarea name="content" cols="30" rows="10" placeholder="Escribe lo que piensas..." class=" rounded-md h-32 bg-slate-200 outline-none p-3"></textarea>
        <button
          class="w-24 ml-auto bg-violet-800 p-1 rounded-md font-medium hover:opacity-60 text-white mt-2 mb-5">Listo</button>
      </form>
    </div>
    {{!-- <div
      class=" button-new-post text-center my-5  py-2 bg-east-side-600 text-white font-semibold rounded-lg active:scale-95 cursor-pointer w-3/4 hover:opacity-90">
      Crear publicación
    </div> --}}
    <div class="w-full flex flex-col">
      {{#each posts}}
        {{> post session=../session}} 
      {{/each}}
    </div>
  </section>
</main>

{{/if}}

