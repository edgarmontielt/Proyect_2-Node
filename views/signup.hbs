<main class="flex justify-center items-center my-10">
  <form
    action="/signup"
    method="post"
    class="flex flex-col w-1/3 bg-white rounded-md p-5"
  >
    <h2 class="p-2 text-xl font-medium">Registro</h2>
    <div class="flex justify-center py-3">
      <p>Regresar al
        <a
          href="/login"
          class="text-east-side-700 font-semibold hover:opacity-80"
        >Login</a></p>
    </div>
    <div class="p-2 text-red-500 font-semibold">
      {{#each validation.errors}}
        <p>{{this}}</p>
      {{/each}}
    </div>
    <input
      type="text"
      name="username"
      placeholder="Username"
      class="m-2 border-2 py-1 rounded-md"
      value="{{user.username}}"
    />
    <input
      type="text"
      name="name"
      placeholder="Name"
      class="m-2 border-2 py-1 rounded-md"
      value="{{user.name}}"
    />
    <input
      type="date"
      name="birthday"
      placeholder="Birthday"
      class="m-2 border-2 py-1 rounded-md"
      value="{{user.birthday}}"
    />
    <select name="gender" class="m-2 border-2 py-1 rounded-md">
      <option value="M">Masculino</option>
      <option value="F">Femenino</option>
    </select>
    <input
      type="text"
      name="profile_pic"
      placeholder="Profile picture"
      class="m-2 border-2 py-1 rounded-md"
      value="{{user.profile_pic}}"
    />
    <input
      type="email"
      name="email"
      placeholder="Email"
      class="m-2 border-2 py-1 rounded-md"
      value="{{user.email}}"
    />
    <input
      type="password"
      name="password"
      placeholder="Password"
      class="m-2 border-2 py-1 rounded-md"
    />
    <input
      type="password"
      name="passwordRepeat"
      placeholder="Password repeat"
      class="m-2 border-2 py-1 rounded-md"
    />

    <div class="flex justify-end">
      <button
        class="m-2 bg-matisse text-white py-2 px-5 rounded-md"
      >Registrar</button>
    </div>
  </form>
</main>